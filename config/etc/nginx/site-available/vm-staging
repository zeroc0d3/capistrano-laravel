server {
    listen 80;

    # Log files for Debugging
    access_log /var/www/laravel-auth/staging/shared/log/access.log;
    error_log /var/www/laravel-auth/staging/shared/log/error.log;

    # Webroot Directory for Laravel project
    root /var/www/laravel-auth/staging/current/src/public;
    index index.php index.html index.htm;

    # Your Domain Name
    server_name demo-auth.laravel-auth.local;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # PHP-FPM Configuration Nginx
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}
